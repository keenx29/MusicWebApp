@using MusicWebApp.Entities
@model MusicWebApp.ViewModels.Home.IndexVM
@{
	Layout = "/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Home";
}
@section Navbar{
	@Html.Partial("_Navbar")
}
@section Playlists{
	<span></span>
}
@section Player{
	
}
@section MainPage{
	<div class="table-responsive">
		<table class="table table-striped table-dark text-center caption-top">
			<caption>All Songs</caption>
			<thead>
				<tr>
					<th scope="row">#</th>
					<th scope="col">Title</th>
					<th scope="col">Artist</th>
					<th scope="col">Duration</th>
					<th scope="col">Edit</th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				@{
					int i = 1;
				}
				@foreach (Song song in Model.Songs.OrderBy(u => u.Id))
				{
					<tr>
						<th scope="row">@i</th>
						<td scope="col">@song.Name</td>
						<td scope="col">@song.Artist</td>
						<td scope="col">@song.Duration</td>
						<td scope="col">
							<a href="/Song/Edit?songId=@(song.Id)" class="btn btn-warning text-dark" onclick="setIdInTemp()">
								<i class="bi bi-pencil-square"></i>
							</a>
						</td>
					</tr>
					i++;

				}
			</tbody>

		</table>
	</div>
}
@section Username{
	@Html.Partial("_Username")
}
